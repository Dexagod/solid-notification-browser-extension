{
  "manifest_version": 2,
  "name": "Solid Authentication",
  "version": "1.0",

  "description": "Solid Authentication",

  "icons": {
    "48": "solid-48.png"
  },

  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "tabs",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Solid Auth"
  },

  "background": {
    "scripts":[
      "background.js"
    ]
  }
}